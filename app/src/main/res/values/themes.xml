<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoID" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/custom_purple</item>
        <item name="colorPrimaryVariant">@color/custom_light_purple</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_dark_blue</item>
        <item name="colorSecondaryVariant">@color/custom_pink</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/texto_secundario</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:buttonStyle">@style/BotonPrimario</item>
        <item name="android:fontFamily">@font/livvic_medium</item>
    </style>
    <style name="BotonPrimario">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@drawable/texto_button</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Base.Theme.AutoID" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <style name="ImagenRedonda" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>