<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/livvic_bold"
            android:text="ssss"
            android:textAllCaps="true"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/tvFechaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18/06/1999 18:00:00"></TextView>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEliminarRegistro"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Eliminar reporte"
        android:textSize="12dp"></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>