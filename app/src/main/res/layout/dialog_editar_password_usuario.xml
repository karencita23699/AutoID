<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvEditarTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escribe tu Nueva Contraseña"
            android:textColor="@color/texto_secundario"></TextView>

        <EditText
            android:id="@+id/etEntrada1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="15dp"></EditText>

        <TextView
            android:id="@+id/tvEditarCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escribe nuevamente la contraseña"
            android:textColor="@color/texto_secundario"></TextView>

        <EditText
            android:id="@+id/etEntrada2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="15dp"></EditText>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelar1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="2dp"
                android:text="Cancelar"
                android:textColor="@drawable/texto_button"
                android:textSize="12dp"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGuardarContraseña"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="2dp"
                android:text="Guardar"
                android:textColor="@drawable/texto_button"
                android:textSize="12dp"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>